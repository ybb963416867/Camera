<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/camera1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用surfaceView预览摄像头"
            />

        <Button
            android:id="@+id/camera2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用TextureView预览摄像头"
            />

        <Button
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="opengl显示一张图片"
            />

        <Button
            android:id="@+id/camera3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl预览摄像头"
            />

        <Button
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl播放本地视频"
            />

        <Button
            android:id="@+id/video_camera_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl播放本地和相机视频"
            />

        <Button
            android:id="@+id/egl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="egl的使用处理图片"
            />

        <Button
            android:id="@+id/fbo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fbo帧缓存用法"
            />


        <Button
            android:id="@+id/but_mediaCodec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mediaCodec中编码器Encode和封装器Mux的用法"
            />

        <Button
            android:id="@+id/openGl_video_recode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="opengl egl录制视频"
            />

        <Button
            android:id="@+id/edit_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="将一个视频的音频和视频提取出来复制到储存卡里面"
            />

        <Button
            android:id="@+id/draw_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl 绘制线"
            />

        <Button
            android:id="@+id/but_recorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频录制"
            />

        <Button
            android:id="@+id/but_exo_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exoplay"
            />

        <Button
            android:id="@+id/but_color_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="颜色纹理"
            />

        <Button
            android:id="@+id/but_enhance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图像增强"
            />

        <Button
            android:id="@+id/but_multi_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多纹理"
            />

        <Button
            android:id="@+id/but_multi_texture_combine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多纹理合并"
            />

        <Button
            android:id="@+id/but_multi_texture_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多纹理带背景"
            />

        <Button
            android:id="@+id/but_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试"
            />


    </LinearLayout>

</ScrollView>