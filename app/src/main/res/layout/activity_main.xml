<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/camera1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用surfaceView预览摄像头"
            />

        <Button
            android:id="@+id/camera2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用TextureView预览摄像头"
            />

        <Button
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="opengl显示一张图片"
            />

        <Button
            android:id="@+id/camera3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl预览摄像头"
            />

        <Button
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl播放本地视频"
            />

        <Button
            android:id="@+id/video_camera_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用opengl播放本地和相机视频"
            />

        <Button
            android:id="@+id/egl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="egl的使用处理图片"
            />

        <Button
            android:id="@+id/fbo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fbo帧缓存用法"
            />


        <Button
            android:id="@+id/but_mediaCodec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mediaCodec中编码器Encode和封装器Mux的用法"
            />

        <Button
            android:id="@+id/openGl_video_recode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="opengl egl录制视频"
            />

    </LinearLayout>

</ScrollView>