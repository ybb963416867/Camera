<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtraTextureRecodeActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.view.ExtraTextureTouchGlSurface
            android:id="@+id/glSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp" />

        <FrameLayout
            android:id="@+id/fl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_load_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载图片" />

                <Button
                    android:id="@+id/but_load_pic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载图片1" />

                <Button
                    android:id="@+id/but_load_pic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载图片2" />

                <Button
                    android:id="@+id/but_load_pic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载图片3" />

                <Button
                    android:id="@+id/but_adjust_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调整位置" />

                <Button
                    android:id="@+id/but_adjust_position1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调整位置1" />

                <Button
                    android:id="@+id/but_recorder_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始录制" />

                <Button
                    android:id="@+id/but_recorder_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停止录制" />

                <Button
                    android:id="@+id/but_capture1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截屏1" />

                <Button
                    android:id="@+id/but_capture2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截屏2" />

            </LinearLayout>


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/cc" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left|bottom"
                android:scaleType="fitXY"
                android:src="@mipmap/cc" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right|bottom"
                android:scaleType="fitXY"
                android:src="@mipmap/cc" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left|top"
                android:scaleType="fitXY"
                android:src="@mipmap/cc" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right|top"
                android:scaleType="fitXY"
                android:src="@mipmap/cc" />

        </FrameLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>